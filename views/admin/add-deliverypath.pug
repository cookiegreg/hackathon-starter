extends ../layout

block content
    .pb-2.mt-2.mb-4.border-bottom
        h3 Add Delivery Path
    form(action='/admin/add-deliverypath', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label(for='formGroupDeliverypathInput') Deliverypath name
            input#formGroupDeliverypathInput.form-control(type='text' placeholder='GO7 Dev' name='name')
        .form-group 
            label(for='formGroupDeliverypathInput') Description
            input#formGroupDeliverypathInput.form-control(type='text' placeholder='A delivery path for GO7' name='description')
        .form-group
            label(for='formGroupDeliverypathInput') IUA
            input#formGroupDeliverypathInput.form-control(type='text' placeholder='GO7' name='iua')
        .form-group
            label(for='formGroupDeliverypathInput') Schema
            input#formGroupDeliverypathInput.form-control(type='text' placeholder='SCHEMA' name='dbschema')
        .form-group
            label(for='formGroupDeliverypathInput') Configuration
            input#formGroupDeliverypathInput.form-control(type='text' placeholder='dbname' name='dbname')
            input#formGroupDeliverypathInput.form-control(type='text' placeholder='environment' name='environment')        
        .offset-md-3.col-md-7.pl-2
            button.col-md-7.btn.btn-primary(type='submit')
                i.fas.fa-plus.fa-sm
                | Add Path
