extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Add Database
  .row
  form(action='/admin/edit-database', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
        label(for='formGroupDatabase1Input') Database Name
        input#formGroupDatabase1Input.form-control(type='text' placeholder='mydb')
    .form-group 
        label(for='formGroupDatabaseInput2') Instance Name(s)
        input#formGroupDatabaseInput2.form-control(type='text' placeholder='mydb1, myd2, mydb3')
    .form-group
        label(for='formGroupDatabaseInput3') Server Name(s)
        input#formGroupExampleInput3.form-control(type='text' placeholder='mysrv1, mysrv2, mysrv3')
    .form-group
        label(for='inlineFormCustomSelect') Status
        select#inlineFormCustomSelect.custom-select.mr-sm-2
            option(selected='') Choose...
            option(value='1') Active
            option(value='2') Inactive
            option(value='3') End of exploitation
    .offset-md-3.col-md-7.pl-2
            button.col-md-3.btn.btn-primary(type='submit')
                i.far.fa-plus
                | Add database
