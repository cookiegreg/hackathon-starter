extends layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 
      i.fas.fa-book
      | Inventory
  .col
      h4 Database list
  .col
          main
              if databases.length > 0
                  table.table.table-bordered
                      thead.thead-dark
                          tr
                              th Database Name
                              th Instance Name
                              th Server Name
                              th Status
                              th Job
                              th Type
                              th Environment
                              th Version
                              th Port
                              th IUA
                              th Actions
                      tbody
                      each database in databases
                          tr
                          td= database.dbname
                          td= database.instancename
                          td= database.servername
                          td= database.status
                          td= database.job
                          td= database.type
                          td= database.environment
                          td= database.version
                          td= database.port
                          td= database.iua
                          td
                              .btn-group.btn-group-sm(role='group' aria-label='action')
                                  a.btn.btn-primary(href='/admin/edit-database/'+database.id role='button' value=database.id)
                                      i.fas.fa-edit
                                  a.btn.btn-danger(href='/admin/remove-database/'+database.id role='button' value=database.id)
                                      i.fas.fa-trash-alt
              else
                  p No databases...
